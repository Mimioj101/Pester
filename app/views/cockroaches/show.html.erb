
<h1> Cockroach Profile Page </h1>

<h2><%= @cockroach.name%></h2>

<% if flash[:errors] %>
  <% flash[:errors].each do |f| %>
    <%= f %><br> 
  <% end %>
<% end%>

<img src="<%=@cockroach.img_url %>" width="300">
<br>
<h4>About me</h4>
<strong>Location:</strong> <%= @cockroach.location%><br>
<strong>Species:</strong> <i><%= @cockroach.species %></i><br>
<strong>Bio:</strong> <%= @cockroach.bio %><br>
<strong>Dowry:</strong> <%= @cockroach.dowry%><br>






<% id = @current_user.id%>

<%= button_to "Match with me",
  match_path(
    matches: {
      user_id: id,
      cockroach_id: @cockroach.id,
    }
  ),
  method: :post 
%>







